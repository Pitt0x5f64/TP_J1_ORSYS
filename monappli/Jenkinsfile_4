pipeline {
    agent any
    tools {
        maven 'Maven3.9.9'
        jdk 'Jdk21'
    }
    stages{
//          notifyBuild('STARTED')
         stage('Clone Repo') {
          steps{
            // for display purposes
            // Get some code from a GitHub repository
            git url: 'https://github.com/Pitt0x5f64/TP_J1_ORSYS',
                credentialsId: 'Pitt0x5f64',
                branch: 'master'
          }
         }
          stage('Build Repo') {
            steps{
              bat ' cd monappli & mvn clean install '
            }
                
          }
          stage('Build Docker') {
            steps{
              // Create image with name "peter/monappli"
              bat ' docker build -t peter/monappli monappli/ '
            }
          }

          stage('Deploy Docker'){
            steps
            {
              // Stop and delete existing containers
              bat ' docker stop -f monAppliContainer || true && docker rm -f monAppliContainer || true '
              // Create container with name "monAppliContainer"
              bat ' docker run --name monAppliContainer -d -p 8081:8081 peter/monappli '
            }
          }
    }
}